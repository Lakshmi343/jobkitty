# Database Configuration
MONGO_URI=mongodb://localhost:27017/jobkitty
# or for MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/jobkitty

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration
EMAIL_USER=jobkitty.in@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Frontend URL Configuration
# IMPORTANT: Set this to your production frontend domain
# Examples:
# FRONTEND_URL=https://jobkitty.netlify.app
# FRONTEND_URL=https://jobkitty.vercel.app
# FRONTEND_URL=https://your-custom-domain.com
FRONTEND_URL=http://localhost:5173

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Port Configuration
PORT=8000

# Node Environment
NODE_ENV=development
# Set to 'production' in your production environment
